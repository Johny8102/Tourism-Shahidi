                    <div class="mb-4 rounded-lg rounded-t-lg border border-gray-200 bg-white px-4 py-2 dark:bg-gray-800 dark:border-gray-700">
                        <label class="sr-only">@Final_project_2.LangResource.Resource.YourComment</label>
                    <textarea id="comment" name="Text" rows="6"
                              class="border-0 w-full px-0 text-sm text-gray-900 focus:ring-0 focus:outline-none dark:text-white dark:placeholder-gray-400 dark:bg-gray-800"
                              placeholder="Write a comment..." required></textarea>
                </div>
                <button type="submit"
                        class="inline-flex items-center rounded-lg bg-blue-700 px-4 py-2.5 text-center text-xs font-medium text-white hover:bg-blue-800 focus:ring-4 focus:ring-blue-200 dark:focus:ring-primary-900">
                        @Final_project_2.LangResource.Resource.Post_Comment
                </button>
            </div>
            }
            
            @foreach (Comments comment in ViewBag.Comments)
            {
                <article class="border-t border-gray-200 bg-white p-6 text-base dark:border-gray-700 dark:bg-gray-900">
                    <footer class="mb-2 flex items-center justify-between">
                        <div class="flex items-center">
                            <p class="mr-3 inline-flex items-center text-sm font-semibold text-gray-900 dark:text-white">
                                <img class="mr-2 h-6 w-6 rounded-full"
                                     src="https://flowbite.com/docs/images/people/profile-picture-4.jpg"
                                     alt="Helene Engels" />@comment.Person_Name
                            </p>
                            <p class="text-sm text-gray-600 dark:text-gray-400">
                                <time pubdate datetime="2022-06-23"
                                      title="June 23rd, 2022">@comment.Time</time>
                            </p>
                        </div>

                    </footer>
                    <p class="text-gray-500 dark:text-gray-400">@comment.Text</p>
                    <div class="mt-4 flex items-center space-x-4">
                        <button type="button" onclick="ReplyComment(@comment.Id)"
                                class="flex items-center text-sm font-medium text-gray-500 hover:underline dark:text-gray-400">
                            <svg class="mr-1.5 h-3.5 w-3.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 18">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5h5M5 8h2m6-3h2m-5 3h6m2-7H2a1 1 0 0 0-1 1v9a1 1 0 0 0 1 1h3v5l5-5h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1Z" />
                            </svg>
                            Reply
                        </button>
                    </div>
                    @foreach (Comments Reply in @comment.Replies)
                    {
                        <article class="border-t border-gray-200 bg-white p-6 text-base dark:border-gray-700 dark:bg-gray-900">
                            <footer class="mb-2 flex items-center justify-between">
                                <div class="flex items-center">
                                    <p class="mr-3 inline-flex items-center text-sm font-semibold text-gray-900 dark:text-white">
                                        <img class="mr-2 h-6 w-6 rounded-full"
                                             src="https://flowbite.com/docs/images/people/profile-picture-4.jpg"
                                             alt="Helene Engels" />@Reply.Person_Name
                                    </p>
                                    <p class="text-sm text-gray-600 dark:text-gray-400">
                                        <time pubdate datetime="2022-06-23"
                                              title="June 23rd, 2022">@Reply.Time</time>
                                    </p>
                                </div>

                            </footer>
                            <p class="text-gray-500 dark:text-gray-400">@Reply.Text</p>
                            
                        </article>
                    }
                </article>
                






            }





<script>
    function ReplyComment(Id) {
        document.getElementById("fk_comment_holder").setAttribute("value", Id)
    }
</script>