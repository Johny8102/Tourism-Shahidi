@model Final_project_2.Models.Tour 
@*@model Final_project_2.Models.Image_properties*@

@{
    ViewData["Title"] = "Delete Tour";
}


<form asp-action="DeleteTour" method="post" enctype="multipart/form-data">
    <div class="bg-gray-100">


        <h2 class="leading-7 py-10 text-center text-2xl font-semibold text-gray-900">Delete @Model.Tour_Name Tour</h2>


        <div class="py-10">
           

            <img class="w-full" id="blah_bg" src="@Url.Content("~/Images/" + Model.Image_bg)" />
                    

        </div>


        <div class="hidden">
            <input type="text" asp-for="Id" />
            <input type="text" asp-for="Image1" />
            <input type="text" asp-for="Image2" />
            <input type="text" asp-for="Image3" />
            <input type="text" asp-for="Image4" />
            <input type="text" asp-for="Image5" />
            <input type="text" asp-for="Image_bg" />


        </div>





        <div class="grid-cols-1 mx-auto grid max-w-2xl items-center gap-x-8 gap-y-16 px-4 py-24 sm:px-6 sm:py-32 lg:max-w-7xl lg:grid-cols-2 lg:px-8">
            <div>
                <div style="display: grid;  column-gap: 20px;" class="grid-cols-5 mt-2 border-b border-gray-300">

                    <div class="col-span-2">

                        <div class="my-2 sm:max-w-md">
                            <label for="TourName" class="leading-6 block text-sm font-medium text-gray-900">Tour Name</label>
                            <p class="flex-1 block rounded-md py-1.5 text-gray-900 sm:text-sm sm:leading-6">
                                @Model.Tour_Name
                            </p>
                        </div>
                    </div>
                    <div class="col-span-3">
                        <div class="my-2 sm:max-w-md">
                            <label for="TourName" class="leading-6 block text-sm font-medium text-gray-900">Title</label>
                            <p class="flex-1 block rounded-md py-1.5 text-gray-900 sm:text-sm sm:leading-6">
                                @Model.Title
                            </p>

                        </div>
                    </div>
                </div>

                <div class="col-span-full my-2 mt-2 border-b border-gray-300">

                    <label for="TourName" class="leading-6 block text-sm font-medium text-gray-900">Description</label>
                    <p class="block w-full rounded-md py-1.5 text-gray-900 sm:text-sm sm:leading-6">
                        @Model.Description
                    </p>
                </div>

                <div class="col-span-full my-2 mt-2 border-b border-gray-300">
                    <label for="TourName" class="leading-6 block text-sm font-medium text-gray-900">Rules</label>
                    <p class="block w-full rounded-md py-1.5 text-gray-900 ring-inset sm:text-sm sm:leading-6">
                        @Model.Rules
                    </p>

                </div>


                <div class="col-span-full my-2 mt-2 border-b border-gray-300">
                    <label for="TourName" class="leading-6 block text-sm font-medium text-gray-900">Status Limit</label>
                    <p class="block w-full rounded-md py-1.5 text-gray-900 ring-inset sm:text-sm sm:leading-6">
                        @Model.Status_limit
                    </p>
                </div>

                <div style="display: grid; grid-template-columns: auto auto ; column-gap: 20px;" class="my-2 mt-2 border-b border-gray-300">
                    <div class="">
                        <div class="mt-2">
                            <label for="TourName" class="leading-6 block text-sm font-medium text-gray-900">Quality</label>
                            <p class="block w-full rounded-md py-1.5 text-gray-900 sm:text-sm sm:leading-6">
                                @Model.Quality_level
                            </p>
                        </div>

                    </div>
                    <div class="">
                        <div class="mt-2">
                            <label for="TourName" class="leading-6 block text-sm font-medium text-gray-900">Touring Area</label>
                            <a class="block w-full rounded-md py-1.5 text-gray-900 sm:text-sm sm:leading-6">
                                @Model.Touring_area
                            </a>
                        </div>
                    </div>

                </div>

                <div style="display: grid; grid-template-columns: auto auto auto; column-gap: 20px;" class="mt-2">

                    <div class="mt-2">
                        <label for="TourName" class="leading-6 block text-sm font-medium text-gray-900">Capacity</label>
                        <p class="block w-full rounded-md py-1.5 text-gray-900 sm:text-sm sm:leading-6">
                            @Model.Capacity
                        </p>
                    </div>


                    <div class="mt-2">
                        <label for="TourName" class="leading-6 block text-sm font-medium text-gray-900">Price per person</label>
                        <p class="block w-full rounded-md py-1.5 text-gray-900 sm:text-sm sm:leading-6">
                            @Model.Price_per_person
                        </p>

                    </div>

                    <div class="mt-2">
                        <label for="TourName" class="leading-6 block text-sm font-medium text-gray-900">Activation Status2</label>
                        @{
                            string data;
                            if (Model.Is_Acive) data = "Activated Tour";
                            else
                                data = "Not Active Tour";

                        }
                        <p class="block w-full rounded-md py-1.5 text-gray-900 sm:text-sm sm:leading-6">
                            @data
                        </p>
                    </div>

                </div>



            </div>




            <!--- All images ----->

            <div class="grid-cols-2 grid-rows-2 grid gap-4 sm:gap-6 lg:gap-8">

                <!--- image 1 ----->

                <div class="">

                    <div class="justify-center px-2 py-3">
                            
                        <img class="" id="blah_1" src="@Url.Content("~/Images/" + Model.Image1)" alt="your image" />
                                    

                    </div>
                </div>

                <!----- image 2 ------->
                <div class="">

                    <div class="justify-center px-2 py-3">
                       <img class="" id="blah_2" src="@Url.Content("~/Images/" + Model.Image2)" alt="" />
                                
                    </div>
                </div>

                <!----- image 3 ------->
                <div class="">

                    <div class="justify-center px-2 py-3">
                        <img class="" id="blah_3" src="@Url.Content("~/Images/" + Model.Image3)" alt="" />

                    </div>
                </div>

                <!----- image 4 ------->
                <div class="">

                    <div class="justify-center px-2 py-3">
                        <img class="" id="blah_4" src="@Url.Content("~/Images/" + Model.Image4)" alt="" />

                                   
                    </div>
                </div>

                <!----- image 5 ------->
                <div class="col-span-2">

                    <div class="justify-center px-2 py-3">
                        <img class="" id="blah_5" src="@Url.Content("~/Images/" + Model.Image5)" alt="" />
                            
                    </div>
                </div>

            </div>




        </div>
        <div class="grid gap-4 pb-20 sm:gap-6 lg:gap-8">

            


            <button type="submit" class="mx-auto mt-5 inline-flex h-12 w-20 items-center rounded-md bg-red-700 px-3 py-2 text-center text-sm font-medium text-white hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-2 size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                </svg>

                Delete
            </button>






        </div>

        <script>
            function readURL(item, imgId, svg_id) {
                console.log(imgId.classList)
                const [file] = item.files
                if (file) {
                    imgId.src = URL.createObjectURL(file)
                    imgId.classList.remove("hidden")
                    document.getElementById(svg_id).style.visibility = "hidden"
                }
            }



        </script>







    </div>
</form>




