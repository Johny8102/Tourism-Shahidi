@model Final_project_2.Models.Tour 
@*@model Final_project_2.Models.Image_properties*@

@{
    ViewData["Title"] = "Update Tour";
}


<form asp-action="DeleteTour" method="post" enctype="multipart/form-data">
    <div class="bg-gray-100">


        <h2 class="leading-7 my-10 text-center text-2xl font-semibold text-gray-900">Add New Tour</h2>


        <div class="border-gray-900/25 mt-2 flex justify-center rounded-lg border border-dashed px-6 py-10">
           

            <img class="w-full" id="blah_bg" src="@Url.Content("~/Images/" + Model.Image_bg)" />
                    

        </div>


        <div class="hidden">
            <input type="text" asp-for="Id" />
            <input type="text" asp-for="Image1" />
            <input type="text" asp-for="Image2" />
            <input type="text" asp-for="Image3" />
            <input type="text" asp-for="Image4" />
            <input type="text" asp-for="Image5" />
            <input type="text" asp-for="Image_bg" />


        </div>





        <div class="grid-cols-1 mx-auto grid max-w-2xl items-center gap-x-8 gap-y-16 px-4 py-24 sm:px-6 sm:py-32 lg:max-w-7xl lg:grid-cols-2 lg:px-8">
            <div>
                <div style="display: grid;  column-gap: 20px;" class="grid-cols-5">

                    <div class="col-span-2">
                        
                        <div class="ring-1 my-2 flex rounded-md bg-white px-2 shadow-sm ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
                            <p  class="flex-1 border-0 block bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6">
                                @Model.Tour_Name
                            </p>
                        </div>
                    </div>
                    <div class="col-span-3">
                        <div class="ring-1 my-2 flex rounded-md bg-white px-2 shadow-sm ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
                            <p   class="flex-1 border-0 block bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6">
                                @Model.Title
                            </p>
                        
                        </div>
                    </div>
                </div>

                <div class="col-span-full my-2">
                    <p  class="border-0 ring-1 block w-full rounded-md py-1.5 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        @Model.Description
                    </p>
                </div>

                <div class="col-span-full my-2">
                    
                        <p  class="border-0 ring-1 block w-full rounded-md py-1.5 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                            @Model.Rules
                        </p>
                    
                </div>


                <div class="col-span-full my-2">
                        <p  class="border-0 ring-1 block w-full rounded-md py-1.5 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                            @Model.Status_limit
                        </p>
                </div>

                <div style="display: grid; grid-template-columns: auto auto ; column-gap: 20px;" class="">
                    <div class="">
                            <div class="mt-2">
                                <p  class="border-0 ring-1 block w-full rounded-md py-1.5 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                    @Model.Quality_level
                                </p>
                            </div>

                    </div>
                    <div class="">
                        <div class="mt-2">
                            <a  class="border-0 ring-1 block w-full rounded-md py-1.5 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                @Model.Touring_area
                            </a>
                        </div>
                    </div>

                </div>

                <div style="display: grid; grid-template-columns: auto auto auto; column-gap: 20px;" class="mt-5">
                    
                    <div class="mt-2">
                           
                        <p  class="border-0 ring-1 block w-full rounded-md py-1.5 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                            @Model.Capacity
                        </p>
                    </div>

                    
                    <div class="mt-2">
                        
                        <p  class="border-0 ring-1 block w-full rounded-md py-1.5 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                            @Model.Price_per_person
                        </p>
                        
                    </div>

                    <div class="mt-2">
                        @{
                            string data;
                            if (Model.Is_Acive) data = "Activated Tour";
                            else
                                data = "Not Active Tour";

                        }
                        <p class="border-0 ring-1 block w-full rounded-md py-1.5 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                @data
                        </p>
                    </div>

                </div>



            </div>




            <!--- All images ----->

            <div class="grid-cols-2 grid-rows-2 grid gap-4 sm:gap-6 lg:gap-8">

                <!--- image 1 ----->

                <div class="">

                    <div class="border-gray-900/25 mt-2 flex justify-center rounded-lg border border-dashed px-6 py-10">
                            
                                    <img class="" id="blah_1" src="@Url.Content("~/Images/" + Model.Image1)" alt="your image" />
                                    

                    </div>
                </div>

                <!----- image 2 ------->
                <div class="">

                    <div class="border-gray-900/25 mt-2 flex justify-center rounded-lg border border-dashed px-6 py-10">
                       <img class="h-24" id="blah_2" src="@Url.Content("~/Images/" + Model.Image2)" alt="" />
                                
                    </div>
                </div>

                <!----- image 3 ------->
                <div class="">

                    <div class="border-gray-900/25 mt-2 flex justify-center rounded-lg border border-dashed px-6 py-10">
                        <img class="h-24" id="blah_3" src="@Url.Content("~/Images/" + Model.Image3)" alt="" />

                    </div>
                </div>

                <!----- image 4 ------->
                <div class="">

                    <div class="border-gray-900/25 mt-2 flex justify-center rounded-lg border border-dashed px-6 py-10">
                        <img class="h-24" id="blah_4" src="@Url.Content("~/Images/" + Model.Image4)" alt="" />

                                   
                    </div>
                </div>

                <!----- image 5 ------->
                <div class="col-span-2">

                    <div class="border-gray-900/25 mt-2 flex justify-center rounded-lg border border-dashed px-6 py-10">
                        <img class="h-24" id="blah_5" src="@Url.Content("~/Images/" + Model.Image5)" alt="" />
                            
                    </div>
                </div>

            </div>




        </div>
        <div class="grid gap-4 pb-20 sm:gap-6 lg:gap-8">


            <input value="Delete" type="submit" class="mx-auto mt-5 h-12 w-20 rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" />










        </div>

        <script>
            function readURL(item, imgId, svg_id) {
                console.log(imgId.classList)
                const [file] = item.files
                if (file) {
                    imgId.src = URL.createObjectURL(file)
                    imgId.classList.remove("hidden")
                    document.getElementById(svg_id).style.visibility = "hidden"
                }
            }



        </script>







    </div>
</form>




