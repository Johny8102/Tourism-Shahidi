@model Person;


@{
    ViewData["Title"] = "Signup Form";
}




<div class="isolate bg-white px-6 py-24 sm:py-32 lg:px-8">
    <div class="top-[-10rem] -z-10 absolute inset-x-0 transform-gpu overflow-hidden blur-3xl sm:top-[-20rem]" aria-hidden="true">
      <div class="-z-10 aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] from-[#ff80b5] to-[#9089fc] relative left-1/2 max-w-none bg-gradient-to-tr opacity-30 sm:left-[calc(50%-40rem)] sm:w-[72.1875rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
    </div>
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Signup form</h2>
      
    </div>
    <form asp-action="CreatePerson" method="post" enctype="multipart/form-data" class="mx-auto mt-16 max-w-xl sm:mt-20">
      <div class="grid-cols-1 grid gap-x-8 gap-y-6 sm:grid-cols-2">
        <div>
          <label for="first-name" class="leading-6 block text-sm font-semibold text-gray-900">First name</label>
          <div class="mt-2.5">
                    <input type="text" asp-for="@Model.Name" id="first-name" autocomplete="given-name" class="border-0 ring-1 block w-full rounded-md px-3.5 py-2 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
          </div>
        </div>
        <div>
          <label for="last-name" class="leading-6 block text-sm font-semibold text-gray-900">Last name</label>
          <div class="mt-2.5">
                    <input type="text" asp-for="@Model.Family" id="last-name" class="border-0 ring-1 block w-full rounded-md px-3.5 py-2 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
          </div>
        </div>
        <div class="sm:col-span-2">
                <label for="UserName" class="leading-6 block text-sm font-semibold text-gray-900">UserName</label>
          <div class="mt-2.5">
                    <input type="text" asp-for="@Model.Username"   class="border-0 ring-1 block w-full rounded-md px-3.5 py-2 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
          </div>
        </div>
            <div class="sm:col-span-2">
                <label for="email" class="leading-6 block text-sm font-semibold text-gray-900">Email</label>
                <div class="mt-2.5">
                    <input type="text" asp-for="@Model.Password"   class="border-0 ring-1 block w-full rounded-md px-3.5 py-2 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                </div>
            </div>
            <div class="sm:col-span-2">
                <label class="leading-6 block text-sm font-semibold text-gray-900">Phone Number</label>
                <div class="mt-2.5">
                    <input type="text" asp-for="@Model.PhoneNumber"  class="border-0 ring-1 block w-full rounded-md px-3.5 py-2 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                </div>
            </div>
            <div class="sm:col-span-2">
                <label for="email" class="leading-6 block text-sm font-semibold text-gray-900">Email</label>
                <div class="mt-2.5">
                    <input type="text" asp-for="@Model.Email" id="email" autocomplete="email" class="border-0 ring-1 block w-full rounded-md px-3.5 py-2 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                </div>
            </div>
            <div class="sm:col-span-2">
                <label  class="leading-6 block text-sm font-semibold text-gray-900">City and Country</label>
                <div class="mt-2.5">
                    <input type="text" asp-for="@Model.City_And_Country" class="border-0 ring-1 block w-full rounded-md px-3.5 py-2 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                </div>
            </div>

            <div>
                <label  class="leading-6 block text-sm font-semibold text-gray-900">Telegram ID</label>
                <div class="mt-2.5">
                    <input type="text" asp-for="@Model.Telegram"  class="border-0 ring-1 block w-full rounded-md px-3.5 py-2 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                </div>
            </div>
            <div>
                <label  class="leading-6 block text-sm font-semibold text-gray-900">Instagram</label>
                <div class="mt-2.5">
                    <input type="text" asp-for="@Model.Instagram"  class="border-0 ring-1 block w-full rounded-md px-3.5 py-2 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                </div>
            </div>

            <div>
                <label class="leading-6 block text-sm font-semibold text-gray-900">Language</label>
                <div class="mt-2.5">
                    <input type="text" asp-for="@Model.Language" class="border-0 ring-1 block w-full rounded-md px-3.5 py-2 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                </div>
            </div>
            <div>
                <label class="leading-6 block text-sm font-semibold text-gray-900">Favorit food</label>
                <div class="mt-2.5">
                    <input type="text" asp-for="@Model.Favorit_food"  class="border-0 ring-1 block w-full rounded-md px-3.5 py-2 text-gray-900 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                </div>
            </div>






        <div class="flex gap-x-4 sm:col-span-2">
          <div class="flex h-6 items-center">
            <!-- Enabled: "bg-indigo-600", Not Enabled: "bg-gray-200" -->
            <button type="button" class="ring-1 ring-gray-900/5 flex w-8 flex-none cursor-pointer rounded-full bg-gray-200 p-px ring-inset transition-colors duration-200 ease-in-out focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" role="switch" aria-checked="false" aria-labelledby="switch-1-label">
              <span class="sr-only">Agree to policies</span>
              <!-- Enabled: "translate-x-3.5", Not Enabled: "translate-x-0" -->
              <span aria-hidden="true" class="ring-1 ring-gray-900/5 h-4 w-4 translate-x-0 transform rounded-full bg-white shadow-sm transition duration-200 ease-in-out"></span>
            </button>
          </div>
          <label class="leading-6 text-sm text-gray-600" id="switch-1-label">
            By selecting this, you agree to our
            <a href="#" class="font-semibold text-indigo-600">privacy&nbsp;policy</a>.
          </label>
        </div>
      </div>




      <div class="mt-10">
        <button type="submit" class="block w-full rounded-md bg-indigo-600 px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Let's talk</button>
      </div>
    </form>
  </div>
